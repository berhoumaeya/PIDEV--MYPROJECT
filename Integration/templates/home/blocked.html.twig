<!DOCTYPE html>
<html lang="en">

	<head>
		<meta charset="utf-8">
		<title>
			{% block title %}
				Alert
			{% endblock  %}


		</title>
		<meta content="width=device-width, initial-scale=1.0" name="viewport">
		<meta content="Free HTML Templates" name="keywords">
		<meta
		content="Free HTML Templates" name="description">

		<!-- Favicon -->
		<link
		href="{{ asset('img/favicon.ico') }}" rel="icon">


		<!-- Google Web Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link
		href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;800&family=Rubik:wght@400;500;600;700&display=swap" rel="stylesheet">

		<!-- Icon Font Stylesheet -->
		<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

		{% block lib %}
			<!-- Libraries Stylesheet -->
			<link
			href="{{ asset('front-office/lib/owlcarousel/assets/owl.carousel.min.css') }}" rel="stylesheet">
			<!-- Animate.css Stylesheet -->
			<link href="{{ asset('front-office/lib/animate/animate.min.css') }}" rel="stylesheet">
		{% endblock %}
		<!-- Customized Bootstrap Stylesheet -->
		{% block css %}
			<link
			href="{{ asset('front-office/css/bootstrap.min.css') }}" rel="stylesheet">

			<!-- Template Stylesheet -->
			<link href="{{ asset('front-office/css/style.css') }}" rel="stylesheet">
		{% endblock %}
	</head>
	<body>

		<!-- Spinner Start -->
		<div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
			<div class="spinner"></div>
		</div>
		<!-- Spinner End -->
		<!-- Navbar & Carousel Start -->
		<div class="container-fluid position-relative p-0">
			<div class="carousel-inner">
				<div class="carousel-item active">
					<img class="w-100" src="{{ asset('front-office/img/alert1.jpg') }}" alt="Image">
					<div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
						<div class="p-3" style="max-width: 900px;">

							{% if app.user %}
								{% if 'BLOCKED' in app.user.roles %}
									<h2>
										<div class="text-white text-uppercase mb-3 animated slideInDown" role="alert">
											Votre compte a été bloqué. Veuillez contacter l'assistance pour obtenir de l'aide.
											<a href="{{ path('app_logout') }}">Se déconnecter</a>
										</div>
									</h2>
								{% endif %}
							{% endif %}

						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- Navbar & Carousel End -->
	</body>
</html></div><!-- Facts Start --><!-- JavaScript Libraries -->{% block js %}
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="{{ asset('front-office/lib/wow/wow.min.js') }}"></script>
<script src="{{ asset('front-office/lib/easing/easing.min.js') }}"></script>
<script src="{{ asset('front-office/lib/waypoints/waypoints.min.js') }}"></script>
<script src="{{ asset('front-office/lib/counterup/counterup.min.js') }}"></script>
<script src="{{ asset('front-office/lib/owlcarousel/owl.carousel.min.js') }}"></script>

<!-- Template Javascript -->
<script src="{{ asset('front-office/js/main.js') }}"></script>{% endblock %}</body></html>
