{% extends 'base-back.html.twig' %}

{% block title %}Message 
{% endblock %}

{% block body %}
 <section class="section">
	<div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title">Gestion des Commentaires</h5>
					<table
	<table class="table">
		<thead>
			<tr>
				<th>Id_message</th>
				<th>Contenu</th>
				<th>Note</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for message in messages %}
				<tr>
					<td>{{ message.getId_message }}</td>
					<td>{{ message.getContenu }}</td>
					<td>{{ message.getNote }}</td>

					<td>
						<a href="{{ path('app_message_show', {'id_message': message.id_message}) }}" class="btn btn-primary btn rounded text-light">Afficher</a>
						<a href="{{ path('app_message_edit', {'id_message': message.id_message}) }}" class="btn btn-success btn rounded text-light">Modifier</a>
					</td>

				</tr>

			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_message_new') }}">Ajouter</a>
{% endblock %}
