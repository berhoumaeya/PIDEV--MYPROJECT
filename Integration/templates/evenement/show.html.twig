{% extends 'base-back.html.twig' %}

{% block title %}
	Evenement
{% endblock %}

{% block body %}
<section class="section">
	<div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title">Evènement</h5>

				<table class="table">
					<tbody>
						<tr>
							<th>Id_event</th>
							<td>{{ evenement.getId }}</td>
						</tr>
						<tr>
							<th>Duree</th>
							<td>{{ evenement.getDuree }}</td>
						</tr>
						<tr>
							<th>Prix</th>
							<td>{{ evenement.getPrix }}</td>
						</tr>
						<tr>
							<th>Date_deb</th>
							<td>{{ evenement.getDateDeb ? evenement.dateDeb|date('Y-m-d') : '' }}</td>
						</tr>
						<tr>
							<th>Date_fin</th>
							<td>{{ evenement.getDateFin ? evenement.dateFin|date('Y-m-d') : '' }}</td>
						</tr>
						<tr>
							<th>Nom_event</th>
							<td>{{ evenement.getNomEvent }}</td>
						</tr>
						<tr>
							<th>Qr Code</th>
							<td><img src="{{ qr_code['changeBgColor']|raw}}" alt="QR Code"></td>
						</tr>
					</tbody>
				</table>
			</div>
			<div class="card-footer">
				<a href="{{ path('app_evenement_index') }}" class="btn btn-primary">retour à la page</a>
				<a href="{{ path('app_evenement_edit', {'id_event': evenement.getId}) }}" class="btn btn-success">Modifier</a>
				<p>
					<a href="https://www.google.com/maps/place/{{ evenement.destin }} "target="_blank">
						<span class="badge bg-warning">voir dans la map</span>
					</a>
				</p>
				{{ include('evenement/_delete_form.html.twig') }}
			</div>
		</div>
	</div>
{% endblock %}
