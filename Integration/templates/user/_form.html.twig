
<section class="section">
	<div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title">Modifier mon profil</h5>
					<!-- Form Row-->
					<div class="row gx-3 mb-3">
						{{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
						<div class="row mb-3">
							<div class="col-sm-3">
								<h6 class="mb-0">Nom</h6>
							</div>
							<div class="col-sm-9 text-secondary">
								{{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
								{{ form_errors(form.nom,{'attr':{'class':'text-danger'}}) }}
							</div>
						</div>
							<div class="row mb-3">
							<div class="col-sm-3">
								<h6 class="mb-0">Login</h6>
							</div>
							<div class="col-sm-9 text-secondary">
								{{ form_widget(form.login, {'attr': {'class': 'form-control'}}) }}
								{{ form_errors(form.login,{'attr':{'class':'text-danger'}}) }}
							</div>
						</div>
						<div class="row mb-3">
							<div class="col-sm-3">
								<h6 class="mb-0">Adresse e-mail</h6>
							</div>
							<div class="col-sm-9 text-secondary">
								{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
								{{ form_errors(form.email,{'attr':{'class':'text-danger'}}) }}
							</div>
						</div>
						<div class="row mb-3">
							<div class="col-sm-3">
								<h6 class="mb-0">Adresse</h6>
							</div>
							<div class="col-sm-9 text-secondary">
								{{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
								{{ form_errors(form.address,{'attr':{'class':'text-danger'}}) }}
							</div>
						</div>
						<div class="row mb-3">
							<div class="col-sm-3">
								<h6 class="mb-0">Numéro de télèphone</h6>
							</div>
							<div class="col-sm-9 text-secondary">
								{{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
								{{ form_errors(form.telephone,{'attr':{'class':'text-danger'}}) }}
							</div>
						</div>
						<button type="submit" class="btn btn-primary">Enregistrer</button>
						{{ form_end(form) }}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
