{% extends 'base-front.html.twig' %}

{% block title %}Modifier utilisateur
{% endblock %}
{% block home %}
		<div id="header-carousel" class="carousel slide carousel-fade" data-bs-ride="carousel">

				<div class="carousel-inner">
					<div class="carousel-item active">
						<img class="w-100" src="{{ asset('front-office/img/gestion.jpg') }}" alt="Image">
						<div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
							<div class="p-3" style="max-width: 900px;">
								<br><br><br>
								<h5 class="text-white text-uppercase mb-3 animated slideInDown">Ace</h5>
								<h1 class="display-1 text-white mb-md-4 animated zoomIn">Art, Culture & Entertainment</h1>
							</div>
						</div>
					</div>

				</div>

			</div>
{% endblock %}
{% block body %}
	{{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
	<div class="container">
		<div class="main-body">
			<br><br>
			<h2>Modification Du Profil</h2>
			<div class="row">
				<div class="col-lg-4">
					<div class="card">
						<div class="card-body">
							<div class="d-flex flex-column align-items-center text-center">
								<img src="{{ asset('front-office/img/utilisateur.png') }}" alt="Admin" class="rounded-circle" width="150">
								<div class="mt-3">
									<h4>{{ app.user.nom }}</h4>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-lg-8">
					<div class="card">
						<div class="card-body">
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Nom</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									{{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
								{{ form_errors(form.nom,{'attr':{'class':'text-danger'}}) }}
								</div>
							</div>
								<div class="row mb-3">
							<div class="col-sm-3">
								<h6 class="mb-0">Login</h6>
							</div>
							<div class="col-sm-9 text-secondary">
								{{ form_widget(form.login, {'attr': {'class': 'form-control'}}) }}
								{{ form_errors(form.login,{'attr':{'class':'text-danger'}}) }}
							</div>
						</div>
						<div class="row mb-3">
							<div class="col-sm-3">
								<h6 class="mb-0">Adresse e-mail</h6>
							</div>
							<div class="col-sm-9 text-secondary">
								{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
								{{ form_errors(form.email,{'attr':{'class':'text-danger'}}) }}
							</div>
						</div>
						<div class="row mb-3">
							<div class="col-sm-3">
								<h6 class="mb-0">Adresse</h6>
							</div>
							<div class="col-sm-9 text-secondary">
								{{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
								{{ form_errors(form.address,{'attr':{'class':'text-danger'}}) }}
							</div>
						</div>
						<div class="row mb-3">
							<div class="col-sm-3">
								<h6 class="mb-0">Numéro de télèphone</h6>
							</div>
							<div class="col-sm-9 text-secondary">
								{{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
								{{ form_errors(form.telephone,{'attr':{'class':'text-danger'}}) }}
							</div>
						</div>
							<div class="row">
								<div class="col-sm-3"></div>
								<div class="col-sm-9 text-secondary">
						<button type="submit" class="btn btn-primary">Enregistrer</button>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
		{{ form_end(form) }}
{% endblock %}
