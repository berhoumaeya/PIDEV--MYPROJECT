{% extends 'base-back.html.twig' %}

{% block title %}Affichage
{% endblock %}


{% block body %}
	<br><br>
	<!-- End Page Title -->

	<section class="section profile">
		<div class="row">
			<div class="col-xl-4">

				<div class="card">
					<div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
						<img src="{{ asset('front-office/img/utilisateur.png') }}" alt="Profile" class="rounded-circle">

						<h2>{{ user.nom }}</h2>
					</div>
				</div>

			</div>

			<div class="col-xl-8">

				<div class="card">
					<div
						class="card-body pt-3">
						<!-- Bordered Tabs -->
						<ul class="nav nav-tabs nav-tabs-bordered">

							<li class="nav-item">
								<button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Détails</button>
							</li>

						</ul>
						<div class="tab-content pt-2">

							<div class="tab-pane fade show active profile-overview" id="profile-overview">

								<h5 class="card-title">Profile Détail</h5>

								<div class="row">
									<div class="col-lg-3 col-md-4 label ">Nom</div>
									<div class="col-lg-9 col-md-8">{{ user.nom }}</div>
								</div>
								<div class="row">
									<div class="col-lg-3 col-md-4 label">Adresse</div>
									<div class="col-lg-9 col-md-8">{{ user.address }}</div>
								</div>

								<div class="row">
									<div class="col-lg-3 col-md-4 label">Numéro de télèphone</div>
									<div class="col-lg-9 col-md-8">{{ user.telephone }}</div>
								</div>

								<div class="row">
									<div class="col-lg-3 col-md-4 label">Adresse e-mail</div>
									<div class="col-lg-9 col-md-8">{{ user.email }}</div>
								</div>
								<div class="row">
									<div class="col-lg-3 col-md-4 label">Login</div>
									<div class="col-lg-9 col-md-8">{{ user.login }}</div>
								</div>
							</div>
						</div>
						<!-- End Bordered Tabs -->
						<hr>
						<a class="btn btn-primary" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
						<a class="btn btn-danger  rounded text-light" data-toggle="tooltip" data-placement="top" title="Supprimer" href="{{ path('app_user_delete', {'id': user.id}) }}">Supprimer<i class="fas fa-trash-alt"></i>
						</a>

					</div>
				</div>

			</div>
		</div>
	</section>
{% endblock %}
