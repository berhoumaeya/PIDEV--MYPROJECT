{% extends 'base-back.html.twig' %}

{% block title %}Destination
{% endblock %}

{% block body %}
	<section class="section">
		<div class="row">
			<div class="col-lg-12">
				<div class="card">
					<div class="card-body">
						<h5 class="card-title">Déstinations</h5>


						<a href="{{ path('app_destination_index') }}" class="btn btn-outline-secondary rounded" style=" position: absolute; top: 10px; right: 10px; margin-right: 10px; margin-top: 10px;">Retour à la liste</a>


						<table class="table table-hover table-bordered">
							<tbody>
								<tr>
									<th class="w-25">Id</th>
									<td>{{ destination.id }}</td>
								</tr>
								<tr>
									<th>Pays</th>
									<td>{{ destination.pays }}</td>
								</tr>
								<tr>
									<th>Ville</th>
									<td>{{ destination.ville }}</td>
								</tr>
							</tbody>
						</table>

						<div class="d-flex justify-content-between">
							<a href="{{ path('app_destination_edit', {'id': destination.id}) }}" class="btn btn-success">Modifier</a>


							<div class="btn-group" role="group" aria-label="Actions">
								{{ include('destination/_delete_form.html.twig') }}


							</div>
						</div>
					{% endblock %}
